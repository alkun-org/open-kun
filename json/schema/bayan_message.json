{
    "header": {
        "type": "object",
        "properties": {
            "version": {
                "type": "string",
                "description": "Bayan schema version",
                "default": "bayan/1.0"
            },
            "id": {
                "type": "string",
                "description": "Message Id, if omit means headless message",
            },
            "time": {
                "type": "integer",
                "description": "Epoch time in milliseconds"
            },
            "language": {
                "type": "string",
                "default": "en-US"
            },

            "apiKey": {
                "type": "string",
                "description": "Al-Kun Api key"
            },
            "path": {
                "type": "string",
                "description": "Bayan API path"
            },

            "statusPath": {
                "type": "string",
                "default": "status/ok"
            },
            "statusText": {
                "type": "string",
                "description": "Status detail text"
            }
        },

        "required": [ "path" ]
    },

    "body": {
        "type": "object",
        "description": "Message body"
    },

    "required": [ "header" ]
}
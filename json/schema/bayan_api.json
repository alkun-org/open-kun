{
    "namespace": {
        "type": "string",
        "description": "Namespace for paths, alphanumeric and underscore only"
    },
    "version": {
        "type": "string",
        "description": "API schema version related to provider"
    },
    "title": {
        "type": "string"
    },
    "description": {
        "type": "string"
    },

    "icons": {
        "type": "array",
        "description": "List of Icons in multiple resolutions",
        "items": {
            "type": "object",
            "properties": {
                "src": {
                    "type": "string",
                    "description": "URL of the icon image"
                },
                "size": {
                    "type": "string",
                    "description": "Icon mage size <width in pixels>X<height in pixels>"
                }
            }
        }
    },

    "creator": {
        "type": "string",
        "description": "User Id registered with alkun.org"
    },

    "credits": {
        "type": "array",
        "description": "Please give proper credits to original creator of the script or algorithm",
        "items": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "Name or registered user id (eg: user/ahmad)"
                },
                "url": { "type": "uri" }
            }
        }
    },

    "hosts": {
        "type": "array",
        "description": "Servers of handler script, labeled host or remote endpoint, eg: myapi.com:9901",
        "items": {
            "type": "string",
            "default": "bayanAlpha"
        }
    },

    "paths": {
        "type": "object",
        "description": "Handler callback is normalized from path, eg: prayertime/add => prayertime_add",
        "properties": {
            "*": {
                "type": "object",
                "properties": {
                    "description": { "type": "string" },
                    "ask": {
                        "type": "object",
                        "description": "body schema for ask/requests"
                    },
                    "answer": {
                        "type": "object",
                        "description": "body schema for answer/response"
                    }
                }
            }
        }
    },

    "required": [ "namespace", "title", "hosts", "paths" ]
}

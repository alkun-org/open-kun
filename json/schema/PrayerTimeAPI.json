{
    "@namespace": "https://alkun.org/schema",

    "@define": {
        "@type": "PrayerTimeAPI",
        "@extend": "BayanAPI",
        "@comment": "Official Prayer time API on alkun.org",

        "creator": {
            "@type": "Person",
            "name": "Hamid Zarrabi-Zadeh",
            "url": "http://praytimes.org/"
        },

        "contributor": {
            "@type": "Person",
            "name": "Akmal Mualim",
            "identifier": "https://alkun.org/me/akmalxxx"
        },

        "path": [
            {
                "url": "/",
                "@comment": "return given date's prayer times",
                "request": {
                    "setting": {
                        "method": {
                            "@type": "Text",
                            "@enum": ["MWL", "ISNA", "Egypt", "Makkah", "Karachi", "Tehran", "Jafari"]
                        },
                        "adjustment": {
                            "@type": "PropertyValue",
                            "@comment": "adjustment to method"
                        },
                        "timeOffset": {
                            "@type": "PropertyValue",
                            "@comment": "Generated times modifier"
                        },
                        "militaryTime": {
                            "@type": "Boolean"
                        }
                    },
                    "geo": { "@type": "GeoCoordinates" },
                    "date": {
                        "@type": ["Date", "DateTime"],
                        "@comment": "Timezone offset can also be supplied using full DateTime here"
                    },
                    "timezone": { "@type": ["Number", "Text"] },
                    "dst": {
                        "@type": "Number",
                        "@comment": "Daylight Saving Timezone offset"
                    },

                    "@required": ["date", "geo"]
                },

                "response": {
                    "prayerTime": {
                        "@type": "PropertyValue"
                    }
                }
            }

        ],

        "@example": [
            {
                "@type": "BayanMessage",
                "@comment": "Example request",
                "url": "/APIPrayerTime",
                "body": {
                    "setting": {
                        "method": "ISNA"
                    },
                    "geo": {
                        "latitude": 3.140853,
                        "longitude": 101.693207
                    },
                    "date": "2022-07-15",
                    "timezone": "+08:00"
                }
            },
    
            {
                "@type": "BayanMessage",
                "@comment": "Example response",
                "url": "/APIPrayerTime",
                "body": {
                    "prayerTime": [
                        { "name": "Imsak", "value": "05:43" },
                        { "name": "Fajr", "value": "05:53" },
                        { "name": "Sunrise", "value": "07:08" },
                        { "name": "Dhuhr", "value": "13:17" },
                        { "name": "Asr", "value": "16:44" },
                        { "name": "Sunset", "value": "19:26" },
                        { "name": "Maghrib", "value": "19:26" },
                        { "name": "Isha", "value": "20:37" },
                        { "name": "Midnight", "value": "01:17" }
                    ]
                }
            }
        ]
    }
}